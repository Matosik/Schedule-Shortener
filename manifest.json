{
  "manifest_version": 3,
  "name": "Schedule Shortener",
  "version": "1.0.0",
  "description": "Заменяет полные названия предметов на сокращения на странице расписания.",
  "icons": { "128": "icons/icon128.png" },
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://ssau.ru/rasp*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
